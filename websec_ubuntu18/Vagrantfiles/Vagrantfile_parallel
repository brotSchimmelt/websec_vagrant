# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.box = "hashicorp/bionic64"

  config.vm.synced_folder ".", "/vagrant", disabled: true

  config.vm.network "public_network"

  config.vm.provider "parallels"

config.vm.provider "parallels" do |prl|
  prl.memory = 2048
  prl.cpus = 2
  prl.check_guest_tools = false
  # prl.update_guest_tools = true # updates the prl tools. takes 2-6 min & vm restart
  prl.name = "websec_dev_server"
end

  config.vm.provision "file", source: "./resources/websec", destination: "/home/vagrant/websec"
  config.vm.provision "file", source: "./resources/packages_websec.txt", destination: "/home/vagrant/packages_websec.txt"
  config.vm.provision "file", source: "./resources/cleanup.sh", destination: "/home/vagrant/cleanup.sh"
  config.vm.provision :shell, path: "bootstrap.sh", privileged: true
end

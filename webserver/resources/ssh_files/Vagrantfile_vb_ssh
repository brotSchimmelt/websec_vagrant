# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.box = "hashicorp/bionic64"

  config.vm.synced_folder ".", "/vagrant", disabled: true

  config.vm.network "public_network"

  config.vm.hostname = "websec-dev-server"

  config.vm.provider "virtualbox"

  config.ssh.username = "websec"

config.vm.provider "virtualbox" do |vb|

  vb.name = "websec_dev_server"
  vb.memory = 2048
  vb.cpus = 2
end

  config.vm.provision "file", source: "./resources/websec", destination: "/home/vagrant/websec"
  config.vm.provision "file", source: "./resources/docker", destination: "/home/vagrant/docker"
  config.vm.provision :shell, path: "bootstrap.sh", privileged: true
end
